<Window x:Class="NoteBunny.FrontEnd.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBunny.FrontEnd.Wpf"
        mc:Ignorable="d"
        Title="NoteBunny" SizeToContent="Height" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10">
            <Label>Notes</Label>
            <ListBox x:Name="lstNotes" MinHeight="360" MouseDoubleClick="LstNotes_MouseDoubleClick"/>
            <Button Margin="0 12 0 0" x:Name="btnUpdate" Click="BtnUpdate_Click">Update list</Button>
        </StackPanel>
        <Button x:Name="btn_NewNote" Grid.Column="1" Click="Btn_NewNote_Click">New note</Button>
        <Button x:Name="btn_Search" Grid.Column="2">Search</Button>
    </Grid>
</Window>
