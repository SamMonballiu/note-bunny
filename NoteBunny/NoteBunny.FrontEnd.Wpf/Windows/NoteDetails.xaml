<Window x:Class="NoteBunny.FrontEnd.Wpf.Windows.NoteDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBunny.FrontEnd.Wpf.Windows"
        mc:Ignorable="d"
        Title="NoteDetails" SizeToContent="Height" Width="800">
    <StackPanel Margin="20 40">
        <Label x:Name="lblSubject" Content="{Binding Subject, FallbackValue=Subject}" Style="{StaticResource SubjectHeader}"/>
        <TextBlock x:Name="lblContent" Text="{Binding Content, FallbackValue=Content}" Height="260"/>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Tags: "/>
            <TextBlock x:Name="lblTags" Text="[Tags]" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Right">
            <Button MinWidth="100">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
