<Window x:Class="NoteBunny.FrontEnd.Wpf.DotNetSix.Windows.TagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteBunny.FrontEnd.Wpf.DotNetSix.Windows"
        mc:Ignorable="d"
        Title="Tags" SizeToContent="Height" ResizeMode="NoResize" MinHeight="400" Width="300" Background="#eee">
    <StackPanel Margin="8">
        <ListBox x:Name="lstTags" Height="400" MouseDoubleClick="LstTags_MouseDoubleClick"></ListBox>

        <Grid Margin="0 8 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <ComboBox Margin="0 0 4 0" Grid.Column="0" x:Name="cbxSortOptions" SelectedIndex="0" />
            <ComboBox Margin="4 0 0 0" Grid.Column="1" x:Name="cbxSortDirection" SelectedIndex="0" />
        </Grid>
    </StackPanel>
</Window>
